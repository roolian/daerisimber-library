<div class="rounded overflow-hidden shadow-lg relative h-full flex flex-col">
    {% if post.thumbnail %}
        <div class="w-full h-40" style="background-image:url({{ post.thumbnail.src('medium') }})"></div>
    {% else %}
        <div class="w-full h-40 bg-gray-50"></div>
    {% endif %}
    <div class="flex-1 px-6 py-8 flex flex-col justify-between h-full gap-6">
        <div class="flex-1">
            <h3 class="font-bold text-xl mb-2">
                {{ post.title }}
            </h3>
            <div class="text-base">
                <div class="mb-4 text-xs">
                    <strong>
                        {{ post.date }}
                    </strong>
                </div>
                {{ post.excerpt.read_more(false).length(20) }}
            </div>
        </div>
        <div>
            <a href="{{ post.link }}" class="stretched-link text-primary font-bold" title="{{ post.title }}">
                Lire plus
            </a>
        </div>
    </div>
</div>
